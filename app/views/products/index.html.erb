<p id="notice"><%= notice %></p>

<h1><a href="/"><</a>  Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Selling</th>
      <th>Name</th>
      <th>Buy price</th>
      <th>Sell price</th>
      <th>In stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.order(id: :asc).each do |product|%>
      <% #next if !product.is_selling %>
      <tr>
        <td  style="padding-right:16px"><%= product.id %></td>
        <td><input type="checkbox" <%=product.is_selling ? "checked" : ""%> onclick="return false;"/></td>
        <td style="padding-right:16px"><%= product.name %></td>
        <td><%= product.buy_price %></td>
        <td><%= product.sell_price %></td>
        <td><%= product.in_stock %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Stop', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

